{
  "manifest_version": 3,
  "name": "Canvas Course Downloader",
  "version": "1.1",
  "description": "Download all attachments in the Canvas course module.",
  "host_permissions": [
    "https://q.utoronto.ca/*",
    "https://*.instructure.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://q.utoronto.ca/courses/*/modules",
        "https://*.instructure.com/courses/*/modules"
      ],
      "js": [
        "config.js",
        "errorHandler.js",
        "domUtils.js",
        "courseExtractor.js",
        "moduleParser.js",
        "fileTreeGenerator.js",
        "downloadManager.js",
        "buttonManager.js",
        "content-refactored.js"
      ],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}